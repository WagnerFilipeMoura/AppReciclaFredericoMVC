{% include 'partials/nav.njk' %}

<center>
{# <div class="centered" > #}
<div class="card">
  <div class="card-header">
    <h4>Cadastro de EcoPonto</h4>
  </div>
  <div class="card-body">
  <form method="POST" action="/app/ecoponto/store">
    <div class="form-group">
      <label>Titulo</label>
      <input type="text" class="form-control" name="titulo" placeholder="Título" required autofocus>
    </div>
    <div class="form-group">
      <label>Descrição</label>
      <input type="text" class="form-control" name="descricao" placeholder="Descrição" required>
    </div>
    <div class="form-row">
    <div class="form-group col-md-6">
      <label>Latitude</label>
      <input type="text" class="form-control" name="latitude" placeholder="Latitude" required>
    </div>
    <div class="form-group col-md-6">
      <label>Longitude</label>
      <input type="text" class="form-control" name="longitude" placeholder="Longitude" required>
    </div>
    </div>
    <div class="form-group text-center">
      <a href="https://www.google.com.br/maps/@-27.3604964,-53.3990617,15z" target="_blank">Consultar Latitude e Longitude</a>
    </div>

    <div class="form-group">
      <label>Cor</label>
      {# <input type="text" class="form-control" name="cor" placeholder="Cor" required> #}
      <select class="form-control" name="cor" required>
        <option value="red">Vermelho</option>
        <option value="orange">Laranja</option>
        <option value="yellow">Amarelo</option>
        <option value="green">Verde</option>
        <option value="blue">Azul</option>
        <option value="gold">Ouro</option>
        <option value="tan">Bronze</option>
        <option value="purple">Roxo</option>
        <option value="violet">Violeta</option>
      </select>
    </div>

    <button type="submit" class="btn btn-lg corpadrao textobranco btn-block">Cadastrar</button>
  </form>
  </div>
</div>
{# </div> #}
</center>
